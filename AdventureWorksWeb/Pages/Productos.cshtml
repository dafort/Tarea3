@page
@using AdventureWorksNS.Data
@model AdventureWorksWeb.Pages.ProductosModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<div class="row">
    <h1 class="display-2">Productos</h1>

    <div class="row">
        <p>Por favor ingrese una nueva categoria de producto</p>
        <form method="POST">
            <div>
                <div><input asp-for="Producto.ProductCategoryID" placeholder="Product Category" /></div>
                
                <div><input type="submit" /></div>
            </div>
        </form>
    </div>


<table class="table">
    <thead class="thead-inverse">
        <tr>
            <th>Categorias</th>
           
        </tr>
    </thead>
    <tbody>
        @if (Model.Productos is not null)
        {
            @foreach(Product c in Model.Productos)
            {
                <tr>
                    <td>@c.ProductCategoryID</td>
                    
                </tr>
            }
        }
    </tbody>
    
</table>

</div>